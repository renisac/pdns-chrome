{
  "manifest_version": 2,
  "name": "RI PDNS",
  "description": "Chrome extension for the REN-ISAC PDNS Service",
  "version": "1.0",

//  "browser_action": {
//    "default_icon": "icon.png",
//    "default_popup": "popup.html"
//  },
  "background": {
    "scripts": ["menu.js"]
  },
  "options_page": "settings.html",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "tabs",
    "https://ajax.googleapis.com/",
    "https://pdns.ren-isac.net/*"
  ],
  "omnibox": { "keyword": "pdns" }
}
